# Mosaic Life - Local Development Environment Variables
# Copy this file to .env and customize as needed
# Default values are provided for local development

# ============================================================================
# Application Environment
# ============================================================================
ENV=dev
LOG_LEVEL=info

# ============================================================================
# Service Ports (Host Mappings)
# ============================================================================
CORE_API_PORT=8080
WEB_PORT=3001
POSTGRES_PORT=15432
OPENSEARCH_PORT=9200
LOCALSTACK_PORT=4566
JAEGER_UI_PORT=16686

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=core

# Database URL for core-api service
# Format: postgresql+psycopg://<user>:<password>@<host>:<port>/<database>
DB_URL=postgresql+psycopg://postgres:postgres@postgres:5432/core

# ============================================================================
# OpenSearch Configuration
# ============================================================================
OPENSEARCH_URL=http://opensearch:9200
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# ============================================================================
# AWS / LocalStack Configuration
# ============================================================================
# LocalStack endpoint for AWS services (SNS, SQS, S3)
AWS_ENDPOINT_URL=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# SNS/SQS Configuration
SNS_TOPIC_ARN_EVENTS=arn:aws:sns:us-east-1:000000000000:domain-events
SQS_QUEUE_URL_EVENTS=http://localstack:4566/000000000000/domain-events

# LocalStack Settings
LOCALSTACK_SERVICES=sns,sqs,s3
LOCALSTACK_LOG_LEVEL=info
LOCALSTACK_DEBUG=0
LAMBDA_EXECUTOR=local

# ============================================================================
# OIDC / Authentication (Placeholder for MVP)
# ============================================================================
OIDC_ISSUER=http://localhost/oidc
OIDC_CLIENT_ID=dummy
OIDC_CLIENT_SECRET=dummy

# ============================================================================
# OpenTelemetry / Observability
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318
JAEGER_STORAGE=memory

# ============================================================================
# Frontend Configuration
# ============================================================================
# API URL for the web app (accessible from browser)
VITE_API_URL=http://localhost:8080

# ============================================================================
# LiteLLM Configuration (Future - AI Proxy)
# ============================================================================
# Uncomment when LiteLLM service is added
# LITELLM_API_KEY=your-key-here
# LITELLM_MASTER_KEY=your-master-key

# ============================================================================
# Secrets (DO NOT COMMIT REAL VALUES)
# ============================================================================
# For production deployments, use AWS Secrets Manager or Kubernetes secrets
# Never commit real credentials to version control

# Example placeholders:
# DATABASE_PASSWORD=<from-secrets-manager>
# OIDC_CLIENT_SECRET=<from-secrets-manager>
# AWS_SECRET_ACCESS_KEY=<from-secrets-manager>

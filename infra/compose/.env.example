# Mosaic Life - Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# General Configuration
# =============================================================================
ENV=dev
LOG_LEVEL=info

# =============================================================================
# Cognito Authentication
# =============================================================================
# Set to 'true' to enable Cognito authentication
# When false, the app uses a development stub for authentication
ENABLE_COGNITO_AUTH=false

# AWS Cognito Configuration
# Get these values by running: ./infra/scripts/setup-cognito.sh
# Or from AWS Console → Cognito → User Pools
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_DOMAIN=

# =============================================================================
# Application URLs
# =============================================================================
# Frontend URL (where the React app runs)
APP_URL=http://localhost:5173

# Backend API URL (where the Core API runs)
API_URL=http://localhost:8080

# =============================================================================
# Session Configuration
# =============================================================================
# Secret key for signing session cookies
# IMPORTANT: Generate a strong secret for production!
# You can generate one with: openssl rand -base64 32
SESSION_SECRET_KEY=dev-secret-change-in-production

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=core
POSTGRES_PORT=15432
DB_URL=postgresql+psycopg://postgres:postgres@postgres:5432/core

# =============================================================================
# Search Configuration
# =============================================================================
OPENSEARCH_PORT=9200
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
OPENSEARCH_URL=http://opensearch:9200

# =============================================================================
# AWS Services (Localstack for local development)
# =============================================================================
LOCALSTACK_SERVICES=sns,sqs,s3
LOCALSTACK_PORT=4566
LOCALSTACK_LOG_LEVEL=info
LOCALSTACK_DEBUG=0

AWS_ENDPOINT_URL=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

SNS_TOPIC_ARN_EVENTS=arn:aws:sns:us-east-1:000000000000:domain-events
SQS_QUEUE_URL_EVENTS=http://localstack:4566/000000000000/domain-events

# =============================================================================
# Observability
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318
JAEGER_UI_PORT=16686
JAEGER_STORAGE=memory

# =============================================================================
# Service Ports
# =============================================================================
CORE_API_PORT=8080
WEB_PORT=3001

# =============================================================================
# Frontend Build Arguments
# =============================================================================
VITE_API_URL=http://localhost:8080
